<%- include ../partials/header %>

<h1 class="display-3 my-5">Submit a New Hero</h1>

<div class="container my-5">
  <form class="" action="/heroes" method="post">
    <div class="form-group my-5">
      <input class="form-control form-control-lg" type="text" name="hero[name]" value="" placeholder="Name" required>
    </div>
    <div class="form-group my-5">
      <input class="form-control form-control-lg" type="text" name="hero[image]" value="" placeholder="Image URL" required>
    </div>
    <div class="form-group my-5">
      <input class="form-control form-control-lg" type="text" name="hero[info]" value="" placeholder="Description" required>
    </div>
    <div class="row mb-5">
      <% berries.forEach(function(berry){ %>
      <div class="berry-checker col border rounded-circle mx-3 my-3 py-5 px-1">
        <p>
          <strong>
            <%= berry.name %>
          </strong>
          <img src="<%= berry.image %>" alt="">
        </p>
        <input type="checkbox" name="hero[berries]" value="<%= berry._id %>">
      </div>

      <% }); %>

    </div>

    <input class="btn btn-primary btn-xl" type="submit" name="" value="SUBMIT">
  </form>
</div>



<%- include ../partials/footer %>
